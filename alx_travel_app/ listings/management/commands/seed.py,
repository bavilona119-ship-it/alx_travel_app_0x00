from django.core.management.base import BaseCommand
from listings.models import Listing

class Command(BaseCommand):
    help = "Seed database with sample listings"

    def handle(self, *args, **kwargs):
        data = [
            {"title": "Appartement à Kinshasa", "description": "Bel appart 3 chambres", "price": 500},
            {"title": "Villa à Nairobi", "description": "Villa luxueuse avec piscine", "price": 1200},
            {"title": "Studio à Kampala", "description": "Studio pas cher au centre-ville", "price": 250},
        ]
        for item in data:
            Listing.objects.create(**item)

        self.stdout.write(self.style.SUCCESS("Seed data inserted!"))
